{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<section class="bg-coverHome mt-16 min-h-screen flex items-center justify-center py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-20">
        {% if books is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                {% for book in books %}
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden transform hover:scale-105 transition duration-300 border border-gray-200 dark:border-gray-700">
                        <div class="p-6">
                            <a href="{{ path('app_book_view', { 'slug': book.slug }) }}" class="block mb-3">
                                <h5 class="text-2xl font-bold text-gray-900 dark:text-white hover:text-indigo-600 dark:hover:text-indigo-400 transition">{{ book.title }}</h5>
                            </a>
                            <p class="text-gray-600 dark:text-gray-400 mb-4">{{ book.description|slice(0, 80) ~ '...' }}</p>

                            <div class="flex flex-wrap gap-2 mb-4">
                                <span class="bg-indigo-100 text-indigo-800 text-xs font-semibold px-3 py-1 rounded-full dark:bg-indigo-900 dark:text-indigo-300">{{ category.name }}</span>
                                <span class="bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full dark:bg-green-900 dark:text-green-300">{{ author.name }}</span>
                                <span class="bg-pink-100 text-pink-800 text-xs font-semibold px-3 py-1 rounded-full dark:bg-pink-900 dark:text-pink-300">{{ langue.name }}</span>
                            </div>

                            <a href="{{ path('app_book_view', { 'slug': book.slug }) }}" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300 font-medium text-sm">
                                Voir plus
                                <svg class="w-4 h-4 ml-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center text-gray-700 dark:text-gray-300 text-xl">
                Aucun ouvrage trouv√©.
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
