{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}

<section class="mx-auto max-w-7xl mt-32 mb-10">
    <div class="w-full max-w-full text-center border border-gray-200 rounded-lg shadow-sm bg-gray-800 dark:border-gray-700 p-6">
        <!-- Image Section -->
        <div class="flex justify-center mt-6">
            <img class="w-24 h-24 rounded-full object-cover shadow-lg" src="{{ asset('images/brown-wooden-dock.jpg') }}" alt="User Profile Picture" />
        </div>
        <!-- Profil Section -->
        <div class="mb-6 mt-6">
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">Profil</h2>
            <p class="text-gray-600 dark:text-gray-400">Email de l'utilisateur : {{ email }}</p>
        </div>

        <div class="mb-6 mt-6">
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">Rôle</h2>
            <p class="text-gray-600 dark:text-gray-400">{{ roles|join(', ') }}</p>
        </div>

        <!-- Action Section -->
        <div class="mb-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-5">Action</h3>
            <div class="space-x-4">
                <a href="{{ path('app_book_search') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Rechercher votre plaisir</a>
                <a href="{{ path('app_book') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Voir tous les ouvrages</a>
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_LIBRARIAN') %}
                    <a href="{{ path('app_dashboard') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Tableau de bord</a>
                {% endif %}
            </div>
        </div>

        <!-- Reservation Section -->
        <div class="mb-6">
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                    <caption class="p-5 text-lg font-semibold text-center rtl:text-right text-gray-900 dark:text-white bg-gray-800">
                        Vos réservations
                    </caption>
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Name
                            </th>
                            <th scope="col" class="px-6 py-3">
                                User
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Status
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Date
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Quantity
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if reservations is not empty %}
                            {% for reservation in reservations %}
                                <tr class="border-b bg-gray-800 dark:border-gray-700 border-gray-200">
                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        {{ reservation.book.title }}
                                    </th>
                                    <td class="px-6 py-4">
                                        {{ reservation.user.email }}
                                    </td>
                                    {% set statusClasses = {
                                        'en_attente': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300',
                                        'confirmee': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300',
                                        'annulee': 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'
                                    } %}

                                    <td class="px-6 py-4">
                                        <span class="{{ statusClasses[reservation.status]|default('') }} text-xs font-medium me-2 px-2.5 py-0.5 rounded-sm">
                                            {{ reservation.status }}
                                        </span>
                                    </td>

                                    <td class="px-6 py-4">
                                        {{ reservation.reservedAt|date('d/m/Y H:i') }}
                                    </td>
                                    <td class="px-6 py-4">
                                        {{ reservation.quantity }}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">Aucune réservation trouvée</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>

</section>

{% endblock %}
