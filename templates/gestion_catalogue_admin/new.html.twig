{% extends 'base.html.twig' %}

{% block title %}Nouveau ouvrage{% endblock %}

{% block body %}

<section class="mx-auto max-w-7xl mt-32">
    <div class="w-full max-w-full p-6 border border-gray-200 rounded-lg shadow-sm sm:p-8 md:p-10 bg-gray-800 dark:border-gray-700">
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-8">Créer un nouveau ouvrage</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-8 text-white'}}) }}

        {{ form_widget(form) }}
            <button class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Enregistré</button>
        {{ form_end(form) }}
    </div>
</section>

{% endblock %}