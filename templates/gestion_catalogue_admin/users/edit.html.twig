{% extends 'base.html.twig' %}

{% block title %}Nouveau book{% endblock %}

{% block body %}

    <section class="mx-auto max-w-7xl mt-32 mb-10">
        <div class="w-full max-w-full p-6 border border-gray-200 rounded-lg shadow-sm sm:p-8 md:p-10 bg-gray-800 dark:border-gray-700">
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Modifier un utilisateur</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} p-3 mb-4 rounded-lg">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'space-y-6 text-white'}}) }}
                <div class="mb-4">
                    {{ form_row(form.email, {
                        'attr': {
                            'class': 'block w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white'
                        }
                    }) }}
                </div>
                
                <div class="mb-4">
                    {{ form_row(form.plainPassword, {
                        'attr': {
                            'class': 'block w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white'
                        }
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(form.roles, {
                        'attr': {
                            'class': 'block w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white'
                        }
                    }) }}
                </div>

                <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    Envoyer
                </button>
            {{ form_end(form) }}
        </div>

    </section>

{% endblock %}