{% extends 'base.html.twig' %}

{% block title %}Hello GestionCatalogueAdminController!{% endblock %}

{% block body %}

<section class="mx-auto max-w-7xl mt-32">
    <div class="w-full max-w-full p-6 border border-gray-200 rounded-lg shadow-sm sm:p-8 md:p-10 bg-gray-800 dark:border-gray-700">
        <div class="space-y-4">
            <p class="text-2xl font-semibold text-gray-900 dark:text-white">{{ ouvrages.title }}</p>
            <p class="text-lg text-gray-700 dark:text-gray-300">{{ ouvrages.description }}</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Auteur : {{ author.name }}</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Cat√©gorie : {{ category.name }}</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Langue : {{ language.name }}</p>

            <div class="mt-4">
                <a href="{{ path('app_gestion_catalogue_admin_edit', { 'slug': ouvrages.slug }) }}"
                class="text-blue-600 hover:text-blue-800 font-medium dark:text-blue-400 dark:hover:text-blue-300">
                Modifier
                </a>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mt-4 p-4 text-white rounded-lg 
                            {% if label == 'success' %}bg-green-500{% elseif label == 'error' %}bg-red-500{% else %}bg-yellow-500{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

</section>

{% endblock %}